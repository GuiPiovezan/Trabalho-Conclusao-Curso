<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kaio01.agenda_aluno.TelaLogin"
    android:background="@drawable/grad">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageView
            android:layout_width="93dp"
            android:layout_height="75dp"
            android:id="@+id/imageView2"
            android:src="@drawable/iconeagenda"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.09" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bem-Vindo"
            android:id="@+id/textView"
            android:textSize="33dp"
            android:layout_weight="0.00"
            android:textColor="#ffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="35dp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:id="@+id/textView2"
            android:textColor="#ffff"
            android:textSize="29dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="75dp"
            android:typeface="serif" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtEmail"
            android:background="@drawable/blue_text"
            android:textColor="#ffffff"
            android:textIsSelectable="false"
            android:textSize="29dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:hint="Digite o Usuário" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha:"
            android:id="@+id/textView3"
            android:textColor="#ffff"
            android:textSize="29dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:typeface="serif" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edtSenha"
            android:textSize="29dp"
            android:textColor="#ffffff"
            android:background="@drawable/blue_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Digite a Senha" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:id="@+id/btnEntrar"
            android:textColor="#ffffff"
            android:background="@drawable/blue_text"
            android:layout_marginBottom="10dp"
            android:textSize="29dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:onClick="entrar_clique" />

        <TextView
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:text="Não possui uma conta?"
            android:id="@+id/textView4"
            android:textColor="#ffff"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRAR-SE"
            android:id="@+id/btn_registrar"
            android:textColor="#ffffff"
            android:background="@drawable/blue_text"
            android:layout_marginBottom="10dp"
            android:textSize="29dp"
            android:layout_gravity="center_horizontal"
            android:onClick="registrar_clique" />

    </LinearLayout>
</RelativeLayout>
